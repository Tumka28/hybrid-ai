<odoo>
    <record id="view_ai_bot_form" model="ir.ui.view">
        <field name="name">ai.bot.form</field>
        <field name="model">ai.bot</field>
        <field name="arch" type="xml">
            <form string="AI Chatbot Interaction">
                <group>
                    <field name="name"/>
                    <field name="message"/>
                    <field name="response"/>
                </group>
                <footer>
                    <button string="Send" type="object" name="send_message"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="ai_bot_menu" name="AI Bot" parent="base.menu_custom" action="action_ai_bot"/>
</odoo>
